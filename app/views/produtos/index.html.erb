<h2>
	Lista De Produtos
	</h2>

	<p>
		<%= link_to('Novo Produto', new_produto_url, :class =>  'btn btn-primary') %> 
	</p>

	<table class="table table-bordered table-striped">
		<thead>
			<tr>
			<th>Nome</th>
			<th>Preco</th>
			<th>Quantidade</th>
			</tr>
		</thead>
		<tbody>
		<% @produtos.each do |produto|  %>
			<tr>
				<td><%= link_to(produto.nome, produto_path(produto) 	) %></td>
				<td><%= number_to_currency produto.preco %></td>
			<td>
				<%= form_tag itens_path, :method => :post do %>
				<%= hidden_field_tag :produto_id, produto.id %>
				<%= text_field_tag :quantidade, 1 %>
				<%= submit_tag 'Adicionar' %>
				<% end %>
			</td>
			</tr>
		<% end %>
	</tbody>
</table>
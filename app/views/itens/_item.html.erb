<tr>
  <td><%= item.nome %></td>
  <td><%= number_to_currency item.preco_unitario %></td>
  <td>
    <%= item_form.hidden_field :id %>
    <%= item_form.text_field :quantidade  %>
  	<%= item_form.submit 'Atualizar', :class => 'btn btn-primary' %>
  	<%= link_to 'Remover', item_path(item),
  	:method => :delete,
  	:data => { :confirm =>'tem certeza?'},
  	:class => 'btn btn-danger' %>
  </td>
  <td><%= number_to_currency item.preco_total %></td>
</tr>